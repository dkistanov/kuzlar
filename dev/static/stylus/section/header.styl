.header__logo {
  width: 170px;
}

.header-wrp {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header {
  margin-bottom: 60px;
  padding-top: 40px;
}

.header__btn {
  font-weight: 700;
  font-size: 16px;
  line-height: 19px;
  letter-spacing: -0.02em;
  color: #fff;
  padding: 11px 27px;
  background: $blue;
  border-radius: 30px;
}

.header__link {
  font-weight: 700;
  font-size: 20px;
  line-height: 24px;
}

.logo__desc {
  font-weight: 400;
  font-size: 12px;
  line-height: 15px;
  letter-spacing: -0.02em;
}

.logo {
  margin-bottom: -12px;
}

.hero-sec {
  position: relative;
}
.hero__title {
  font-weight: 700;
  font-size: 50px;
  line-height: 55px;
  /* identical to box height */

  letter-spacing: -0.02em;
  color: $blue;
  max-width: 306px;
  margin: 0 0 4px;
}

.hero__subtitle {
  font-weight: 700;
  font-size: 20px;
  line-height: 24px;
  color: $blue;
}

.hero__note {
  margin-top: 40px;
  font-weight: 700;
  font-size: 24px;
  line-height: 29px;

  display: flex;
  flex-direction: column;
}

.hero__note span:not(:first-child) {
  font-size: 16px;
  line-height: 19px;
  margin-top: 2px;
}

.hero__note p {
  font-weight: 400;
  font-size: 16px;
  line-height: 19px;

  color: #000000;
  margin: 10px 0 0;
}

.hero__background {
  background: url("../img/content/hero.png") no-repeat;
}
.hero__background {
  width: 977px;
  height: 698px;
  background-size: 100%;
  border-radius: 64%;
  background-position-y: 91px;
  background-position-x: -26px;
  top: -235px;
  right: 17%;
  z-index: -1;
  position: absolute;
}

.hero__background:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 106px solid #fff;
  border-radius: 50%;
  filter: blur(25px);
  border-bottom-width: 178px;
  border-top-width: 154px;
}
.hero__background:before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 50px solid #fff;
  border-radius: 50%;
  border-bottom-width: 100px;
  border-top-width: 100px;
}
.hero__contact-us {
  background: $blue;
  border-radius: 25px;
  padding: 40px 70px 40px 40px;
  margin-bottom: -101px;
  position: relative;
  margin-top: 60px;
  display: flex;
}

.contact-us__text {
  max-width: 336px;
  color: #ffffff;
  margin-right: 24px;
}

h3 {
  font-size: 20px;
  line-height: 24px;
  font-weight: bold;
}

.contanct-us__note {
  font-size: 12px;
  line-height: 15px;
  margin-top: 20px;
  font-weight: bold;
}

.contact-us__field {
  background: #ffffff;
  border-radius: 67px;
  padding: 16px;
  font-weight: 700;
  font-size: 16px;
  line-height: 19px;
  color: #000;
  width: 270px;
}

.contact-us__field::placeholder {
  color: #929292;
}

.contact-us__labels {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: -5px;
  margin-right: 30px;
}

.contact-us__label:not(:last-child) {
  margin-bottom: 25px;
}

.contact-us__btn {
  background: $yellow;
  border-radius: 25px;
  font-weight: 700;
  font-size: 16px;
  line-height: 19px;
  padding: 37px 22px 47px;
  text-transform: uppercase;
  cursor: pointer;
}

.cataract-sec {
  padding: 161px 0 60px;
}

.cataract__types {
  display: flex;
}

.cataract-wrp {
  background: #ffffff;
  border-radius: 25px;
  padding: 30px 30px 15px;
}

h4 {
  font-weight: 700;
  font-size: 16px;
  line-height: 19px;
}

.type__name {
  margin-bottom: 60px;
}

.cataract__types {
  justify-content: space-between;
  padding: 0 65px;
  margin-bottom: 110px;
}

.type__pic {
  width: 225px;
}

.cataract__title {
  margin-bottom: 10px;
}

.cataract__desc {
  font-weight: 500;
  font-size: 16px;
  line-height: 19px;
  max-width: 865px;
  margin-bottom: 25px;
}

.cataract__note {
  font-weight: 500;
  font-size: 16px;
  line-height: 19px;
  padding: 15px;
  background: #ebf0f4;
  border-radius: 25px;
  margin: 0 -15px;
}

.symptoms-sec {
  padding: 60px 0;
}

h2 {
  font-weight: 700;
  font-size: 24px;
  line-height: 29px;
}

.symptoms-wrp {
  display: flex;
  margin-top: 40px;
  justify-content: space-between;
}

.symptoms {
  width: calc((100% - 30px) / 2);
  font-weight: 500;
  font-size: 16px;
  line-height: 19px;
}

.sypmtoms__perfomance {
  width: calc((100% - 30px) / 2);
}

.symptom {
  background-color: #1a92e9;
  background-image: url("../img/svg/double-arrows.svg");
  border-radius: 67px;
  background-repeat: no-repeat;
  background-position: calc(100% - 15px) center;
  background-size: 42px 48px;
  padding: 20px 70px 20px 20px;
  min-height: 78px;
  display: flex;
  align-items: center;
  cursor: pointer;
  &.active-symptom {
    background-color: $yellow;
    color: #000000;
  }
}

.symptom:not(:last-child) {
  margin-bottom: 47px;
}

.symptom__perfomance {
  display: none;
  &.active-sypmtom {
    display: block;
  }
}

.perfomance__pic {
  width: 100%;
  height: 580px;
  border-radius: 25px;
  overflow: hidden;
}

.perfomance__pic img {
  object-fit: cover;
  width: 100%;
  height: 100%;
}

.symptoms__note {
  margin-top: 50px;
  background: #ffffff;
  border-radius: 25px;
  padding: 20px 70px 20px 20px;
  color: #000;
  font-size: 16px;
  line-height: 19px;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.symptoms__note-title {
  margin-bottom: 20px;
}

.symptoms__note-circle {
  border: 6px solid #000000;
  width: 135px;
  height: 135px;
  border-radius: 50%;
  flex-shrink: 0;
  margin-right: 43px;
}
.symptom__perfomance:first-child .perfomance__pic:after {
  content: "";
  background: rgba(255, 255, 255, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.perfomance__pic {
  position: relative;
}

.stages-sec {
  padding: 60px 0 0px;
}

.sec_desc {
  font-weight: 500;
  font-size: 16px;
  line-height: 19px;
  margin-top: 20px;
}

.stages {
  margin-top: 40px;
}

.stage {
  display: flex;
}

.stage:not(:last-child) {
  margin-bottom: 30px;
}

.stage__desc {
  background: #ffffff;
  border-radius: 25px;
  padding: 20px;
  font-weight: 500;
  font-size: 16px;
  line-height: 19px;
  display: flex;
  align-items: center;
}

.stage__name-block {
  margin-right: 30px;
  flex-shrink: 0;
  padding-top: 20px;
  display: flex;
  min-height: 150px;
  background: #ffffff;
  border-radius: 25px;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  width: 270px;
  font-weight: bold;
}

.stage__count {
  background: #0d72ba;

  font-size: 16px;
  line-height: 19px;
  color: #ddea38;
  text-align: center;
  padding: 6px 20px;
  width: 100%;
  min-height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.stage__name {
  font-size: 24px;
  line-height: 29px;
  text-align: center;

  /* blue */

  color: #0d72ba;
  max-width: 170px;
}

.therapy__note {
  display: flex;
  background: #ddea38;
  border-radius: 25px;
  padding: 15px 16px 20px;
  color: #000;
  align-items: center;
  margin: 120px 0 -87px;
  position: relative;
}
.therapy__note-pic {
  flex-shrink: 0;
  margin-right: 40px;
}

.therapy__note-text {
  max-width: 588px;
}

.therapy__note-desc {
  font-weight: 500;
  margin-top: 20px;
  font-size: 16px;
  line-height: 19px;
}
.therapy-sec {
  padding: 130px 0 40px;
}

.therapy__desc p {
  margin: 20px 0 0;
}

.therapy__operation {
  margin-top: 30px;
  background: #1a92e9;
  padding: 40px 0;
}

.operation__title {
  margin-bottom: 40px;
}

.operation__advantage {
  font-weight: 500;
  font-size: 16px;
  align-items: center;
  display: flex;
  line-height: 19px;
  padding: 9px 0;
  border-bottom: 1px solid #ddea38;
}

.operation__advantage:first-child {
  border-top: 1px solid #ddea38;
}

.advantage__name {
  font-weight: 700;
  font-size: 24px;
  line-height: 29px;
  /* identical to box height */

  /* Yellow */

  color: #ddea38;
  width: 38%;
}

.therapy__omc {
  margin-top: 30px;
  display: flex;
  align-items: center;
}

.omc__logo span {
  font-weight: 700;
  font-size: 80px;
  line-height: 97px;
  /* identical to box height */

  /* White */

  text-shadow: 0px 0px 6px #fff;
  color: #0d72ba;
  text-shadow: -0 -2px 0 #ffffff, 0 -2px 0 #ffffff, -0 2px 0 #ffffff,
    0 2px 0 #ffffff, -2px -0 0 #ffffff, 2px -0 0 #ffffff, -2px 0 0 #ffffff,
    2px 0 0 #ffffff, -1px -2px 0 #ffffff, 1px -2px 0 #ffffff, -1px 2px 0 #ffffff,
    1px 2px 0 #ffffff, -2px -1px 0 #ffffff, 2px -1px 0 #ffffff,
    -2px 1px 0 #ffffff, 2px 1px 0 #ffffff, -2px -2px 0 #ffffff,
    2px -2px 0 #ffffff, -2px 2px 0 #ffffff, 2px 2px 0 #ffffff,
    -2px -2px 0 #ffffff, 2px -2px 0 #ffffff, -2px 2px 0 #ffffff,
    2px 2px 0 #ffffff;
}

.omc__desc {
  font-weight: 500;
  font-size: 24px;
  line-height: 29px;
  margin-left: 41px;
  padding-left: 32px;
  border-left: 2px solid #ffffff;
}
