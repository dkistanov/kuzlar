*, *:before, *:after
	vertical-align baseline
	font-weight inherit
	font-family inherit
	font-style inherit
	font-size 100%
	border 0 none
	outline 0 none
	padding 0
	margin 0
	box-sizing border-box


body
	min-height: 100vh;
	max-height: 100vh;
	height: 100%;
	font-family: $Montserrat;
	font-size: 16px
	line-height: 1

p 
	margin .5em 0
a
	text-decoration none
	color black

img
	max-width 100%

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle


textarea
	resize none

figure 
	margin 0